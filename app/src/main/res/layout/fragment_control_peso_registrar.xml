<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGuardarPeso"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="140dp"/>

    <RelativeLayout
        android:id="@+id/content_control_peso_registrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.mifincaapp.mifincaapp.ControlPeso_registrar"
        tools:showIn="@layout/activity_control_peso_registrar">

        <TextView
            android:textSize="20dp"
            android:text="Registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"/>

        <TextView
            android:text="Fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:id="@+id/textView5"
            android:textSize="18dp"
            android:layout_marginTop="100dp" />

        <TextView
            android:text="NÃºm. arete:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:id="@+id/textView10"
            android:textSize="18dp"
            android:layout_marginTop="140dp"/>

        <TextView
            android:text="Edad:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:id="@+id/textView12"
            android:textSize="18dp"
            android:layout_marginTop="180dp"/>

        <TextView
            android:text="Tendencia racial:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignStart="@+id/textView12"
            android:id="@+id/textView13"
            android:textSize="18dp"
            android:layout_marginTop="220dp"/>

        <TextView
            android:text="Peso en kg:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignStart="@+id/textView13"
            android:id="@+id/textView14"
            android:textSize="18dp"
            android:layout_marginTop="260dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_below="@+id/textView13"
            android:layout_alignLeft="@+id/txtRazaPeso"
            android:layout_alignStart="@+id/txtRazaPeso"
            android:id="@+id/txtPeso"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:ems="10"
            android:id="@+id/txtRazaPeso"
            android:layout_alignBaseline="@+id/textView13"
            android:layout_alignBottom="@+id/textView13"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/txtEdadPeso"
            android:layout_alignStart="@+id/txtEdadPeso" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textAlignment="center"
            android:ems="10"
            android:id="@+id/txtEdadPeso"
            android:layout_alignBaseline="@+id/textView12"
            android:layout_alignBottom="@+id/textView12"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/txtArete3"
            android:layout_alignStart="@+id/txtArete3" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textAlignment="center"
            android:ems="8"
            android:id="@+id/txtFechaRegistrarPeso"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textAlignment="center"
            android:ems="10"
            android:id="@+id/txtArete3"
            android:layout_above="@+id/txtEdadPeso"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/txtFechaRegistrarPeso"
            android:layout_alignStart="@+id/txtFechaRegistrarPeso" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
