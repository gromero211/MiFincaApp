<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="52dp"
        android:layout_width="match_parent">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            app:toolbarId="@+id/toolbar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary">

            <TextView
                android:textSize="22dp"
                android:text="Control de peso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="70dp"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:id="@+id/content_control_peso_registrar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.mifincaapp.mifincaapp.ControlPeso_registrar"
            tools:showIn="@layout/activity_control_peso_registrar">

            <TextView
                android:textSize="20dp"
                android:text="Registrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"/>

            <TextView
                android:text="Número:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="18dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:text="Fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:id="@+id/textView5"
                android:textSize="18dp"
                android:layout_marginTop="100dp" />

            <TextView
                android:text="Núm. arete:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:id="@+id/textView10"
                android:textSize="18dp"
                android:layout_marginTop="140dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:layout_below="@+id/textView5"
                android:layout_alignLeft="@+id/txtFechaRegistrarPeso"
                android:layout_alignStart="@+id/txtFechaRegistrarPeso"
                android:id="@+id/txtArete"
                android:text="0" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="0"
                android:textAlignment="center"
                android:ems="8"
                android:id="@+id/textID"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Edad:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10"
                android:id="@+id/textView12"
                android:textSize="18dp"
                android:layout_marginTop="180dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="0"
                android:textAlignment="center"
                android:ems="10"
                android:id="@+id/txtEdad"
                android:layout_below="@+id/txtArete"
                android:layout_alignLeft="@+id/txtArete"
                android:layout_alignStart="@+id/txtArete" />

            <TextView
                android:text="Tendencia racial:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:id="@+id/textView13"
                android:textSize="18dp"
                android:layout_marginTop="220dp"/>

            <TextView
                android:text="Peso en kg:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView13"
                android:layout_alignStart="@+id/textView13"
                android:id="@+id/textView14"
                android:textSize="18dp"
                android:layout_marginTop="260dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:layout_below="@+id/textView13"
                android:layout_alignLeft="@+id/txtRaza"
                android:layout_alignStart="@+id/txtRaza"
                android:id="@+id/txtPeso"
                android:text="0"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:text="00/00/00"
                android:textAlignment="center"
                android:id="@+id/txtFechaRegistrarPeso"
                android:layout_below="@+id/textID"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Ingrese la raza"
                android:textAlignment="center"
                android:ems="10"
                android:id="@+id/txtRaza"
                android:layout_alignBaseline="@+id/textView13"
                android:layout_alignBottom="@+id/textView13"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <Button
        android:text="Guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGuardarPeso"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="70dp"/>

    <Button
        android:text="Cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancelarRegistroPeso"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="210dp"/>

</android.support.design.widget.CoordinatorLayout>
