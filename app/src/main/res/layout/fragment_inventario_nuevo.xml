<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mifincaapp.mifincaapp.Inventario_nuevo">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Edad:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="79dp"
            android:id="@+id/textView37"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_below="@+id/txtFechaRei"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />

        <TextView
            android:text="N° Arete:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView36"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_below="@+id/txtFechaRei"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginTop="23dp" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtArete"

            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_alignBaseline="@+id/textView36"
            android:layout_alignBottom="@+id/textView36"
            android:layout_alignLeft="@+id/txtFechaRei"
            android:layout_alignStart="@+id/txtFechaRei"
            android:layout_alignRight="@+id/txtFechaRei"
            android:layout_alignEnd="@+id/txtFechaRei" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/txtEdad"

            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="14sp"

            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_alignBaseline="@+id/textView37"
            android:layout_alignBottom="@+id/textView37"
            android:layout_alignLeft="@+id/txtArete"
            android:layout_alignStart="@+id/txtArete"
            android:textAlignment="center"
            android:layout_alignRight="@+id/txtArete"
            android:layout_alignEnd="@+id/txtArete" />

        <TextView
            android:text="Categoría"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEdad"
            android:layout_alignLeft="@+id/textView37"
            android:layout_alignStart="@+id/textView37"
            android:layout_marginTop="16dp"
            android:id="@+id/textView8"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/spnCategoria"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignLeft="@+id/txtEdad"
            android:layout_alignStart="@+id/txtEdad"
            android:layout_alignRight="@+id/txtEdad"
            android:layout_alignEnd="@+id/txtEdad" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtFechaRei"
            android:textAlignment="center"

            android:textSize="14sp"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toRightOf="@+id/textView8"
            android:layout_marginLeft="76dp"
            android:layout_marginStart="76dp" />

        <TextView
            android:text="Tendencia Racial:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/textView38"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8" />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/spnRaza"
            android:layout_alignTop="@+id/textView38"
            android:layout_alignLeft="@+id/spnCategoria"
            android:layout_alignStart="@+id/spnCategoria" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:id="@+id/textView7"
            android:typeface="sans"
            android:fontFamily="sans-serif"
            android:text="Fecha:"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Guardar"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="92dp"
            android:id="@+id/btnGuardarNuevo" />

    </RelativeLayout>

</FrameLayout>
