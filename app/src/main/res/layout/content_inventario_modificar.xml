<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Edad:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:id="@+id/textView37"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/txtFechaRegistrarPeso"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:text="N° Arete:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView36"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/txtFechaRegistrarPeso"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtArete3"
        android:text="####"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/textView36"
        android:layout_alignBottom="@+id/textView36"
        android:layout_alignLeft="@+id/txtFechaRegistrarPeso"
        android:layout_alignStart="@+id/txtFechaRegistrarPeso"
        android:layout_alignRight="@+id/txtFechaRegistrarPeso"
        android:layout_alignEnd="@+id/txtFechaRegistrarPeso" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/txtEdadPeso"
        android:text="##"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="14sp"

        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_alignBaseline="@+id/textView37"
        android:layout_alignBottom="@+id/textView37"
        android:layout_alignLeft="@+id/txtArete3"
        android:layout_alignStart="@+id/txtArete3"
        android:textAlignment="center"
        android:layout_alignRight="@+id/txtArete3"
        android:layout_alignEnd="@+id/txtArete3" />

    <TextView
        android:text="Categoría"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEdadPeso"
        android:layout_alignLeft="@+id/textView37"
        android:layout_alignStart="@+id/textView37"
        android:layout_marginTop="16dp"
        android:id="@+id/textView8"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spnCategoria"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/txtEdadPeso"
        android:layout_alignStart="@+id/txtEdadPeso"
        android:layout_alignRight="@+id/txtEdadPeso"
        android:layout_alignEnd="@+id/txtEdadPeso" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/txtFechaRegistrarPeso"
        android:textAlignment="center"

        android:text="dd/mm/aaaa"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/textView8"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="76dp" />

    <TextView
        android:text="Tendencia Racial:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textView38"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_alignTop="@+id/textView38"
        android:layout_alignLeft="@+id/spnCategoria"
        android:layout_alignStart="@+id/spnCategoria" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:id="@+id/textView7"
        android:typeface="sans"
        android:fontFamily="sans-serif"
        android:text="Fecha:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
