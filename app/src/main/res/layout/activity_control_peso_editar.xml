<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="52dp"
        android:layout_width="match_parent">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            app:toolbarId="@+id/toolbar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary">

            <TextView
                android:textSize="22dp"
                android:text="Control de peso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="70dp"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:id="@+id/content_control_peso_editar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.mifincaapp.mifincaapp.ControlPeso_registrar"
            tools:showIn="@layout/activity_control_peso_editar">

            <TextView
                android:textSize="20dp"
                android:text="Editar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"/>

            <TextView
                android:text="Número:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="18dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:text="Fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:id="@+id/textView5"
                android:textSize="18dp"
                android:layout_marginTop="100dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/editText2"
                android:layout_alignStart="@+id/editText2"
                android:text="17/10/16"
                android:textAlignment="center"
                android:id="@+id/txtFecha"
                android:layout_marginTop="10dp"/>

            <TextView
                android:text="Núm. arete:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:id="@+id/textView10"
                android:textSize="18dp"
                android:layout_marginTop="140dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:layout_below="@+id/textView5"
                android:layout_alignLeft="@+id/txtFecha"
                android:layout_alignStart="@+id/txtFecha"
                android:id="@+id/txtAreteanterior"
                android:text="14" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="5"
                android:textAlignment="center"
                android:ems="8"
                android:id="@+id/editText2"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Edad:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10"
                android:id="@+id/textView12"
                android:textSize="18dp"
                android:layout_marginTop="180dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="5"
                android:textAlignment="center"
                android:ems="10"
                android:id="@+id/editText5"
                android:layout_below="@+id/txtAreteanterior"
                android:layout_alignLeft="@+id/txtAreteanterior"
                android:layout_alignStart="@+id/txtAreteanterior" />

            <TextView
                android:text="Tendencia racial:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:id="@+id/textView13"
                android:textSize="18dp"
                android:layout_marginTop="220dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Pasiega"
                android:textAlignment="center"
                android:ems="10"
                android:layout_below="@+id/textView12"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:id="@+id/editText8"
                android:layout_marginTop="10dp"/>

            <TextView
                android:text="Peso en kg:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView13"
                android:layout_alignStart="@+id/textView13"
                android:id="@+id/textView14"
                android:textSize="18dp"
                android:layout_marginTop="260dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:layout_below="@+id/textView13"
                android:layout_alignLeft="@+id/editText8"
                android:layout_alignStart="@+id/editText8"
                android:id="@+id/editText11"
                android:text="0"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="350dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                    android:text="Núm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_margin="5dp"
                    android:textAlignment="center"/>
                <TextView
                    android:text="Fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23"
                    android:layout_margin="5dp"
                    android:textAlignment="center"/>

                <TextView
                    android:text="Núm. arete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:layout_margin="5dp"
                    android:textAlignment="center"/>

                <TextView
                    android:text="Edad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:layout_margin="5dp"
                    android:textAlignment="center"/>

                <TextView
                    android:text="Raza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17"
                    android:layout_margin="5dp"
                    android:textAlignment="center"/>

                <TextView
                    android:text="Peso(kg)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18"
                    android:layout_margin="5dp"
                    android:textAlignment="center"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView24"
                        android:layout_margin="5dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:text="19/11/16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView25"
                        android:layout_margin="5dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:text="14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView26"
                        android:layout_margin="5dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:text="4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView27"
                        android:layout_margin="5dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:text="Pasiega"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView28"
                        android:layout_margin="5dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:text="668"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView29"
                        android:layout_margin="5dp"
                        android:textAlignment="center"/>
                </TableRow>

            </TableLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <Button
        android:text="Buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="30dp"/>

    <Button
        android:text="Guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="140dp"/>

</android.support.design.widget.CoordinatorLayout>
